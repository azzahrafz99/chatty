<div class="row">
  <div class="col-sm-12 col-md-8 offset-md-2 col-lg-8 offset-lg-2">
    <div class="card card__custom mb-4">
      <div class="card-header">
        <div class="row">
          <div class="col-xs-10 col-sm-10 col-md-8 col-lg-6">
            <h2><%= @user.eql?(current_user) ? 'My Profile' : 'Profile' %></h2>
          </div>
          <div class="col-xs-2 col-sm-2 col-md-4 col-lg-6 text-right">
            <% if @user.eql? current_user %>
              <%= link_to edit_user_registration_path, class: 'btn btn-info', id: 'edit-user' do %>
                <i class="fa fa-pencil"></i> Edit
              <% end %>
            <% end %>
          </div>
        </div>
      </div>

      <div class="card-body">
        <div class="row">
          <div class="col-12">
            <div class="avatar">
              <% if @user.avatar.attached? %>
                <%= image_tag @user.avatar %>
              <% else %>
                <%= image_tag 'avatar.svg' %>
              <% end %>
            </div>

            <div class="form-group">
              <label>First Name</label>
              <p><%= @user.first_name %></p>
            </div>

            <div class="form-group">
              <label>Last Name</label>
              <p><%= @user.last_name %></p>
            </div>

            <div class="form-group">
              <label>Birthdate</label>
              <p><%= @user.birthdate&.strftime('%d %B %Y') %></p>
            </div>

            <div class="form-group">
              <label>Email</label>
              <p><%= @user.email %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

