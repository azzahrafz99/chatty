<div class="row">
  <div class="col-sm-12 col-md-12 col-lg-10 offset-lg-1">
    <div class="chatroom_container row bg-white">
      <div class="side_panel col-sm-4 col-md-4 col-lg-4">
        <div class="side_panel__current_user">
          <div class="avatar">
            <% if current_user.avatar.attached? %>
              <%= image_tag current_user.avatar %>
            <% else %>
              <%= image_tag 'avatar' %>
            <% end %>
          </div>
          <h5><%= link_to current_user.email, current_user %></h5>
        </div>

        <div class="side_panel__info">
          <h4>Users</h4>
          <%= turbo_stream_from "users" %>
          <div id="users">
            <%= render @users %>
          </div>

          <h4>Rooms</h4>
          <%= render 'rooms/new_room_form' %>
          <%= turbo_stream_from "rooms" %>
          <div id="rooms">
            <%= render @rooms %>
          </div>
        </div>
      </div>

      <div class="room_container col-sm-8 col-md-8 col-lg-8 p-0">
        <% if @single_room %>
          <div id="single_room">
            <div class="header bg-info text-light">
              <h4 class="text-center"><%= @user&.email || @single_room.name %></h4>
            </div>

            <%= turbo_stream_from @single_room %>
            <div id="messages">
              <%= render @messages %>
            </div>
              <%= render 'messages/new_message_form' %>
          </div>
        <% else %>
          <div class="room-icon text-center">
            <i class="fa fa-weixin"></i>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

